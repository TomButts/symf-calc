                                <td>
                                    <a href="{{ path('calculator_operand', { value: 'add' }) }}"><input type="button" class="button" value="+"/></a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="{{ path('calculator_append', { value: 4 }) }}"><input type="button" class="button" value="4"/></a>
