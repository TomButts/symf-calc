                                </td>
                                <td>
                                    <a href="{{ path('calculator_append', { value: 9 }) }}"><input type="button" class="button" value="9"/></a>
                                </td>
                                <td>
                                    <a href="{{ path('calculator_operand', { value: 'divide' }) }}">
                                        <input type="button" class="button" value="/"/>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="{{ path('calculator_clear') }}/">
                                        <button class="button">
                                            C
                                        </button>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('calculator_append', { value: 0 }) }}">
                                        <input type="button" class="button" value="0"/>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('calculator_equal') }}/"><input type="button" class="button" value="="/></a>
