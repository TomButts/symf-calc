                                </td>
                                <td>
                                    <a href="{{ path('calculator_updateCurrent', { operation: 'percent' }) }}">
                                        <input type="button" class="button" value="%"/>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="{{ path('calculator_append', { value: 1 }) }}"><input type="button" class="button" value="1"/></a>
                                </td>
                                <td>
                                    <a href="{{ path('calculator_append', { value: 2 }) }}"><input type="button" class="button" value="2"/></a>
